<winlocal:WindowBase x:Class="ICSharpCode.ILSpy.AsmEditor.MethodBody.MethodBodyDlg"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:winlocal="clr-namespace:ICSharpCode.ILSpy.AsmEditor"
             xmlns:mbody="clr-namespace:ICSharpCode.ILSpy.AsmEditor.MethodBody"
             Height="750" Width="1300"
             Title="Edit Method Body"
             Style="{StaticResource DialogWindowStyle}" WindowStartupLocation="CenterOwner"
             MinHeight="300" MinWidth="500">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition />
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="*" />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>

		<mbody:MethodBodyControl Margin="5" />

		<StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="5 0 5 5">
			<Button Content="_OK" IsEnabled="{Binding HasNoError}" IsDefault="True" Style="{StaticResource DialogButton}" Margin="0,0,5,0" Click="okButton_Click" />
			<!-- Don't use IsCancel="True" to prevent accidentally hitting ESC -->
			<Button Content="_Cancel" Style="{StaticResource DialogButton}" Margin="0,0,5,0" Click="cancelButton_Click" />
			<Button Content="Restore" Style="{StaticResource DialogButton}" Command="{Binding ReinitializeCommand}" ToolTip="Restore all options" />
		</StackPanel>
	</Grid>
</winlocal:WindowBase>