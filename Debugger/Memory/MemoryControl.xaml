<UserControl x:Class="dnSpy.Debugger.Memory.MemoryControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:dnSpy.Debugger.Memory"
             xmlns:mvvm="clr-namespace:dnSpy.MVVM;assembly=dnSpy"
             xmlns:hex="clr-namespace:dnSpy.Hex;assembly=dnSpy"
             IsEnabled="{Binding IsStopped}"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="100">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>
    <Grid>
        <ScrollViewer CanContentScroll="True" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
            <hex:DnHexBox x:Name="hexBox" Document="{Binding HexDocument}" CacheLineBytes="True" IsMemory="True" />
        </ScrollViewer>
        <Border Background="{DynamicResource MemoryWindowDisabled}" Visibility="{Binding CanNotEditMemory, Converter={StaticResource BooleanToVisibilityConverter}}" />
    </Grid>
</UserControl>