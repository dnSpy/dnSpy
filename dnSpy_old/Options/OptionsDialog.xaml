<ctrls:MetroWindow x:Class="ICSharpCode.ILSpy.Options.OptionsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Style="{StaticResource DialogWindowStyle}" WindowStartupLocation="CenterOwner"
        xmlns:ctrls="clr-namespace:dnSpy.Shared.UI.Controls;assembly=dnSpy.Shared.UI"
        MinHeight="300" MinWidth="450"
        Title="Options" Height="480" Width="500">
	<Grid Margin="5">
		<Grid.RowDefinitions>
			<RowDefinition
				Height="1*" />
			<RowDefinition
				Height="Auto" />
		</Grid.RowDefinitions>
		<TabControl Name="tabControl" Margin="0 0 0 5"/>
		<StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
			<Button IsDefault="True" Style="{StaticResource DialogButton}" Margin="0,0,5,0" Name="okButton" Click="OKButton_Click">_OK</Button>
			<Button IsCancel="True" Style="{StaticResource DialogButton}">_Cancel</Button>
		</StackPanel>
	</Grid>
</ctrls:MetroWindow>